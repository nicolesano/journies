<div class="container pt-4">
    <h1>Your journals</h1>

    <% if @journals.count > 0 %>
        <% @journals.each do |journal| %>
            <%= link_to journal_path(journal.id) do %>
                <h3><%= journal.name %></h3>
            <% end %>
        <% end %>
    <% else %>
        <h3>No journals yet!</h3>
    <% end %>

    <div class="btn">
        <%= link_to new_journal_path(@journal) do %>
            Create new journal
        <% end %>
    </div>
</div>
